
#include <iostream>

using namespace std;

int main() {
    int a, b, c;

    // Запрашиваем ввод двух чисел
    cout << "Введите два числа: ";
    cin >> a >> b;

    // Используем тернарный оператор для определения меньшего числа
    c = (a > b) ? b : a; // Если a > b, c присваивается b, иначе c присваивается a

    // Выводим меньшее число
    cout << "Меньшее число: " << c << endl;

 
    return 0; // Возвращаем 0, чтобы указать, что программа завершилась успешно
}

