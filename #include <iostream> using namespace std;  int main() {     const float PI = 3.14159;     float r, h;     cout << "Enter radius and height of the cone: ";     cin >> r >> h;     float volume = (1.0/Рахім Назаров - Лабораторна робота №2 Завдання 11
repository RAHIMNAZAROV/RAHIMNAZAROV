#include <iostream>
using namespace std;

int main() {
    int totalMinutes;
    cout << "Enter the number of minutes: ";
    cin >> totalMinutes;
    int hours = totalMinutes / 60;
    int minutes = totalMinutes % 60;
    cout << totalMinutes << " minutes is " << hours << " hours and " << minutes << " minutes." << endl;
    return 0;
}
