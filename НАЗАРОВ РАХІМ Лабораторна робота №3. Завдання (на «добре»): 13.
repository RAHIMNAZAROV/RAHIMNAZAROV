#include <iostream>
using namespace std;

int main() {
    int num;

    while (true) {
        cout << "Введіть число (0 для виходу): ";
        cin >> num;
        if (num == 0) break;

        long long factorial = 1;
        for (int i = 1; i <= num; i++) {
            factorial *= i;
        }

        cout << "Факторіал " << num << " = " << factorial << endl;
    }
    return 0;
}
