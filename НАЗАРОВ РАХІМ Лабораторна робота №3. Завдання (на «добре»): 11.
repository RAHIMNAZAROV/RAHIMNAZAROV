#include <iostream>
using namespace std;

int main() {
    int sum = 0, num;

    while (true) {
        cout << "Введіть число (0 для виходу): ";
        cin >> num;
        if (num == 0) break;

        if (num < 0 && num % 3 == 0) {
            sum += num;
        }
    }

    cout << "Сума від’ємних чисел, що діляться на 3: " << sum << endl;
    return 0;
}
