#include <iostream>
#include <iomanip>
#include <cstdlib> // для rand() та srand()
#include <ctime> // для time()

using namespace std;

const int N = 10; // Максимальний розмір масиву
const int M = 10; // Максимальний розмір масиву

int main() {
    int n, m, a, b;
    cout << "Введіть кількість рядків (n < " << N << "): ";
    cin >> n;
    cout << "Введіть кількість стовпців (m < " << M << "): ";
    cin >> m;

    if (n > N || m > M) {
        cout << "Невірні розміри масиву!" << endl;
        return 1;
    }

    cout << "Введіть границі для генерації псевдовипадкових чисел (a < b): ";
    cin >> a >> b;

    int matrix[N][M];

    // Ініціалізація генератора випадкових чисел
    srand(static_cast<unsigned int>(time(0)));

    // Заповнення масиву випадковими числами
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < m; j++) {
            matrix[i][j] = rand() % (b - a + 1) + a;
        }
    }

    // Виведення початкової матриці
    cout << "Початкова матриця:" << endl;
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < m; j++) {
            cout << setw(4) << matrix[i][j];
        }
        cout << endl;
    }

    // Міняємо місцями діагоналі
    for (int i = 0; i < n; i++) {
        if (i < m) { // Перевірка, що ми не виходимо за межі
            int temp = matrix[i][i];
            matrix[i][i] = matrix[i][m - 1 - i];
            matrix[i][m - 1 - i] = temp;
        }
    }

    // Виведення модифікованої матриці
    cout << "Матриця після зміни діагоналей:" << endl;
    for (int i = 0; i < n; i++) {
        for (int j = 0; j < m; j++) {
            cout << setw(4) << matrix[i][j];
        }
        cout << endl;
    }

    return 0;
}
